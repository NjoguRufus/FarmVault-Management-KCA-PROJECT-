// Firestore security rules for FarmVault
// You can keep evolving these as we add more features.
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    // Load the authenticated user's profile to get their companyId.
    function userCompanyId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId;
    }

    // For creates: ensure the new document's companyId matches the user's companyId.
    function matchesCompanyOnCreate() {
      return isSignedIn()
        && request.resource.data.companyId == userCompanyId();
    }

    // For updates/deletes: ensure the existing doc's companyId matches the user's companyId.
    function matchesCompanyOnDoc() {
      return isSignedIn()
        && resource.data.companyId == userCompanyId();
    }

    // --- Users ---

    match /users/{userId} {
      // For now, allow any signed-in user to read/write user documents.
      // This keeps the app functional while we iterate on role-based security.
      // Tighten these rules later using custom auth claims if needed.
      allow read, write: if isSignedIn();
    }

    // --- Companies ---

    match /companies/{companyId} {
      // Only users whose profile companyId matches can access their company document.
      allow read, write: if isSignedIn() && userCompanyId() == companyId;
    }

    // --- Projects ---

    match /projects/{projectId} {
      // Allow any signed-in user to read projects; restrict modifications by company.
      allow read: if isSignedIn();
      allow update, delete: if matchesCompanyOnDoc();
      allow create: if matchesCompanyOnCreate();
    }

    // --- Project Stages ---

    match /projectStages/{stageId} {
      allow read: if isSignedIn();
      allow update, delete: if matchesCompanyOnDoc();
      allow create: if matchesCompanyOnCreate();
    }

    // --- Work Logs ---

    match /workLogs/{workLogId} {
      allow read: if isSignedIn();
      allow update, delete: if matchesCompanyOnDoc();
      allow create: if matchesCompanyOnCreate();
    }

    // --- Expenses ---

    match /expenses/{expenseId} {
      allow read: if isSignedIn();
      allow update, delete: if matchesCompanyOnDoc();
      allow create: if matchesCompanyOnCreate();
    }

    // --- Season Challenges ---

    match /seasonChallenges/{challengeId} {
      allow read: if isSignedIn();
      allow update, delete: if matchesCompanyOnDoc();
      allow create: if matchesCompanyOnCreate();
    }

    // --- Inventory Usage ---

    match /inventoryUsage/{usageId} {
      allow read: if isSignedIn();
      allow update, delete: if matchesCompanyOnDoc();
      allow create: if matchesCompanyOnCreate();
    }

    // --- Inventory Items ---

    match /inventoryItems/{itemId} {
      allow read: if isSignedIn();
      allow update, delete: if matchesCompanyOnDoc();
      allow create: if matchesCompanyOnCreate();
    }

    // --- Inventory Categories ---

    match /inventoryCategories/{categoryId} {
      allow read: if isSignedIn();
      allow update, delete: if matchesCompanyOnDoc();
      allow create: if matchesCompanyOnCreate();
    }

    // --- Inventory Purchases ---

    match /inventoryPurchases/{purchaseId} {
      allow read: if isSignedIn();
      allow update, delete: if matchesCompanyOnDoc();
      allow create: if matchesCompanyOnCreate();
    }

    // --- Harvests ---

    match /harvests/{harvestId} {
      allow read: if isSignedIn();
      allow update, delete: if matchesCompanyOnDoc();
      allow create: if matchesCompanyOnCreate();
    }

    // --- Sales ---

    match /sales/{saleId} {
      allow read: if isSignedIn();
      allow update, delete: if matchesCompanyOnDoc();
      allow create: if matchesCompanyOnCreate();
    }

    // --- Suppliers ---

    match /suppliers/{supplierId} {
      allow read: if isSignedIn();
      allow update, delete: if matchesCompanyOnDoc();
      allow create: if matchesCompanyOnCreate();
    }

    // --- Employees ---

    match /employees/{employeeId} {
      allow read: if isSignedIn();
      allow update, delete: if matchesCompanyOnDoc();
      allow create: if matchesCompanyOnCreate();
    }

    // --- Feedback ---

    match /feedback/{feedbackId} {
      // Feedback is linked to a company; enforce same-company access for writes.
      allow read: if isSignedIn();
      allow update, delete: if matchesCompanyOnDoc();
      allow create: if matchesCompanyOnCreate();
    }

    // --- Fallback: deny everything else by default ---

    match /{document=**} {
      allow read, write: if false;
    }
  }
}

